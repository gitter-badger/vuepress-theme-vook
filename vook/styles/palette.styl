// VuePress auto global require

// The prefix to use on all css classes from vook.
$vook-prefix ?= vook

// colorPalette
$red ?= #f44336
$pink ?= #e91e63
$purple ?= #9c27b0
$deep-purple ?= #673ab7
$indigo ?= #3f51b5
$blue ?= #2196f3
$light-blue ?= #03a9f4
$cyan ?= #00bcd4
$teal ?= #009688
$green ?= #4caf50
$light-green ?= #8bc34a
$lime ?= #cddc39
$yellow ?= #ffeb3b
$amber ?= #ffc107
$orange ?= #ff9800
$deep-orange ?= #ff5722
$brown ?= #795548
$grey ?= #9e9e9e
$blue-grey ?= #607d8b

// colors
$primary-color ?= $blue
$info-color ?= $light-blue
$success-color ?= $green
$error-color ?= $red
$warning-color ?= $amber
$white ?= #fff
$black ?= #000

// code lang
$code-lang ?= bash c css cpp cmake coffeescript coffee d dart docker dockerfile ejs erlang git go graphql html http ini java javascript jq js json jsonp json5 jsx kotlin latex tex context less lua makefile markdown md matlab nginx objectivec perl php phpdoc plsql powershell pug python py q r regex ruby rb rust sass scss scala shell smarty sql stylus svg swift toml ts tsx twig typescript vim visual-basic vb wiki xml yaml yml

// Color used by default to control hover and active backgrounds and for alert info backgrounds.
$primary-1 ?= lighten($primary-color, 80%)
$primary-2 ?= lighten($primary-color, 70%)
$primary-3 ?= lighten($primary-color, 60%)
$primary-4 ?= lighten($primary-color, 50%)
$primary-5 ?= lighten($primary-color, 40%)
$primary-6 ?= lighten($primary-color, 30%)
$primary-7 ?= lighten($primary-color, 20%)
$primary-8 ?= lighten($primary-color, 10%)
$primary-9 ?= $primary-color
$primary-10 ?= darken($primary-color, 10%)
$primary-11 ?= darken($primary-color, 20%)
$primary-12 ?= darken($primary-color, 30%)
$primary-13 ?= darken($primary-color, 40%)
$primary-14 ?= darken($primary-color, 50%)
$primary-15 ?= darken($primary-color, 60%)
$primary-16 ?= darken($primary-color, 70%)
$primary-17 ?= darken($primary-color, 80%)

// Base Scaffolding Variables
$body-background ?= #f1f1f1
$body-background-invert ?= invert($body-background)
$component-background ?= $white
$component-background-invert ?= invert($component-background)
$font-family ?= -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
$code-family ?= 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, Courier, monospace
$heading-color ?= fade($black, 0.85)
$text-color ?= rgba($black, 0.65)
$text-color-secondary ?= rgba($black, 0.45)
$text-color-invert ?= invert($text-color)
$font-variant-base ?= tabular-nums
$font-size-base ?= 14px
$font-size-lg ?= $font-size-base + 2px
$font-size-sm ?= 12px
$line-height-base ?= 1.5
$border-radius-base ?= 4px
$border-radius-sm ?= 2px

// vertical paddings
$padding-lg ?= 24px // containers
$padding-md ?= 16px // small containers and buttons
$padding-sm ?= 12px // Form controls and items
$padding-xs ?= 8px // small items

// LINK
$link-color ?= $primary-9
$link-hover-color ?= $primary-2
$link-active-color ?= $primary-16
$link-decoration ?= none
$link-hover-decoration ?= none

// Disabled states
$disabled-color ?= rgba($black, 0.25)

// responsive breakpoints
$MQWide ?= 1440px
$MQNarrow ?= 1024px
$MQMobile ?= 768px
$MQMobileNarrow ?= 480px
